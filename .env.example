# Servidor
PORT=3000
NODE_ENV=development
BASE_URL=https://seu-dominio.com

# Banco de Dados
MONGODB_URI=mongodb://localhost:27017/teste-integridade
MONGODB_TEST_URI=mongodb://localhost:27017/teste-integridade-test

# JWT
JWT_SECRET=sua-chave-secreta-super-segura-aqui
JWT_EXPIRES_IN=7d

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=seu-access-token-aqui
MERCADO_PAGO_WEBHOOK_SECRET=seu-webhook-secret-aqui
MERCADO_PAGO_PUBLIC_KEY=sua-public-key-aqui

# URLs de Callback do Mercado Pago
URL_PAGAMENTO_SUCESSO=https://seu-dominio.com/pagamento/sucesso
URL_PAGAMENTO_FALHA=https://seu-dominio.com/pagamento/falha
URL_PAGAMENTO_PENDENTE=https://seu-dominio.com/pagamento/pendente

# Configurações de Créditos
PRECO_POR_CREDITO=1.00
QUANTIDADE_MINIMA_CREDITOS=10
QUANTIDADE_MAXIMA_CREDITOS=10000

# Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app
EMAIL_FROM=noreply@seu-dominio.com

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Segurança
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://seu-frontend.com

# Features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_VALIDATION=true
ENABLE_TRANSACTION_LOGS=true